
    <style>
        .ttl{
            border-bottom: 3px solid #9e8cff;
        }
        .harga-total{
            color: #340086
        }
        .total{
            border-bottom: 2px solid #340086;
        }
        .title-section{
            background-color: #9e8cff;
        }
    </style>

    <% let paket = data.paket %> 
    <!-- title section -->
    <div class="container-fluid title-section">
        <div class="container pt-5 pb-5">
            <h1>Halaman mengubah Paket <i class="bi bi-box"></i></h1>
            <small >halaman untuk mengubah paket oleh admin</small>
        </div>
    </div>

    <div class="container-fluid">
        <div class="container py-4">
            <h2 class="ttl d-inline-block">Silahkan isi formulir dibawah ini</h2>
        </div>
    </div>

    <!--untuk form-->
    <div class="container-fluid form-init">
        <div class="container">
            <form action="../../proses/update/paket/<%= paket.id %>" method="post">
                <div class="row mb-3">
                    <div class="col-md-2">
                        <label for="nama_paket">Nama paket  :</label>
                    </div>
                    <div class="col-md-10">
                        <input type="text" class="form-control" name="nama_paket" id="nama_paket" value="<%= paket.nama_paket %> ">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-2">
                        <label for="id_outlet">Outlet  :</label>
                    </div>
                    <div class="col-md-10">
                        <select class="form-select" name="id_outlet">
                            <% outlet.forEach((ol) => { %>
                                <option value="<%= ol.id %> " <%- (ol.id == paket.id_outlet) ? "selected" : "" %> ><%= ol.nama %> : <%= ol.id %>  </option>
                            <% }) %>
                        </select>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-2">
                        <label for="jenis">Jenis  :</label>
                    </div>
                    <div class="col-md-10">
                        <select class="form-select" name="jenis">
                            <option value="kiloan" <%- (paket.jenis == "kiloan")? "selected" : "" %> >Kiloan</option>
                            <option value="selimut" <%- (paket.jenis == "selimut")? "selected" : "" %> >Selimut</option>
                            <option value="bed_cover" <%- (paket.jenis == "bed_cover")? "selected" : "" %> >Bed Cover</option>
                            <option value="kaos" <%- (paket.jenis == "kaos")? "selected" : "" %> >Kaos</option>
                            <option value="lain" <%- (paket.jenis == "lain")? "selected" : "" %> >Lain - lain</option>
                        </select>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-2">
                        <label for="harga">Harga  :</label>
                    </div>
                    <div class="col-md-10">
                        <input type="number" class="form-control" name="harga" id="harga" value="<%= paket.harga %>">
                    </div>
                </div>
                <div class="d-flex justify-content-end">
                    <div class="submit">
                        <button class="btn btn-success"><strong>Submit </strong><i class="bi bi-arrow-up-right"></i></button>
                    </div>
                </div>
            </form>
        </div>

    </div>