
    <style>
        .ttl{
            border-bottom: 3px solid #9e8cff;
        }
        .harga-total{
            color: #340086
        }
        .total{
            border-bottom: 2px solid #340086;
        }
        .title-section{
            background-color: #9e8cff;
        }
    </style>


    <!-- title section -->
    <div class="container-fluid title-section">
        <div class="container pt-5 pb-5">
            <h1>Halaman tambah user</h1>
            <small >halaman untuk menambah user oleh admin</small>
        </div>
    </div>

    <div class="container-fluid">
        <div class="container py-4">
            <h2 class="ttl d-inline-block">Silahkan isi formulir dibawah ini</h2>
        </div>
    </div>

    <!--untuk form-->
    <div class="container-fluid form-init">
        <div class="container">
            <form action="../proses/create/user" method="post">
                <div class="row mb-3">
                    <div class="col-md-2">
                        <label for="nama">Nama  :</label>
                    </div>
                    <div class="col-md-10">
                        <input type="text" class="form-control" name="nama" id="nama">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-2">
                        <label for="username">Username  :</label>
                    </div>
                    <div class="col-md-10">
                        <input type="text" class="form-control" name="username" id="username">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-2">
                        <label for="password">Password  :</label>
                    </div>
                    <div class="col-md-10">
                        <input type="password" class="form-control" name="password" id="password">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-2">
                        <label for="id_outlet">Id outlet  :</label>
                    </div>
                    <div class="col-md-10">
                        <select class="form-select" name="id_outlet">
                            <% outlet.forEach(ol => { %>
                                <option value="<%= ol.id %>"selected> <%= ol.nama %>  : <%= ol.id %>  </option>
                            <% }) %>
                        </select>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-2">
                        <label for="role">Role  :</label>
                    </div>
                    <div class="col-md-10">
                        <select class="form-select" name="role">
                            <option value="admin"selected>Admin</option>
                            <option value="kasir">Kasir</option>
                            <option value="owner">Owner</option>
                        </select>
                    </div>
                </div>
                <div class="d-flex justify-content-end">
                    <div class="submit">
                        <button class="btn btn-success"><strong>Submit </strong><i class="bi bi-arrow-up-right"></i></button>
                    </div>
                </div>
            </form>
        </div>

    </div>




















    