    <title>Login doloo</title>
  </head>

  <body>
    <form action="" method="post">
      <div class="box-input-login m-auto mt-3 rounded-3">
        <div class="row">
          <div class="col-md-6 left">
            <div class="overlay">
              <h1 class="mt-2">Login</h1>
              <h1>mazzeh..</h1>
              <p>login dulu dong...</p>
            </div>
          </div>
          <div class="col-md-6 right">
            <h1>Login</h1>
            <% if (typeof msg != 'undefined') { %>
              <p class="fst-italic text-danger">
                <%= msg %>
              </p>
            <% } %>
            <input type="text" class="inp mb-3" placeholder="username" name="username"/>
            <input type="password" class="inp mb-3" placeholder="password" name="password" />
            <button type="submit" class="btn-login mt-3 mb-4 rounded">Login ></button>
          </div>
        </div>
      </div>
    </form>

    <!-- Option 1: Bootstrap Bundle with Popper -->
