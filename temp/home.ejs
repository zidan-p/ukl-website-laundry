<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="1_home.css">
    <style>
        .hello{
            background-color: #9e8cff;
            
        }

        .onscroll h1{
            font-size: 65px;
        }

        .bg_text{
            box-shadow: inset 0 0 0 0 #340086;
            display: block;
            color: #340086;
            transition: all 1s ease-in-out;
        }
        .admin{
            padding: 15px;
        }
        .animate{
            box-shadow: inset 222px 0 0 0 #340086;
            color: white;
        }



        /* untuk card*/
        .btnn{
            background: none;
            text-decoration: none;
            border-radius: 5px;
            font: inherit;
            line-height: 1;
            padding: .5em 1em;
            transition: 0.25s;
            color: inherit;
        }

        .btnn:hover{
            box-shadow: inset 6.5em 0 0 0 #340086;
            color: white;
        }

        .card{
            transition: all 1s ease-in-out;
        }

        .card-animate{
            box-shadow: inset 300px 0 0 0 #340086;
            color: #340086;
        }
    </style>
    <title>Hello, world!</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light" >
        <div class="container">
            <a class="navbar-brand" href="#">Navbar</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                <a class="nav-link active" href="#">Home</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="#">User</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="#">Member</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="#">Paket</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="#">transaksi</a>
                </li>
            </ul>
            </div>
        </div>
    </nav>


    <!-- untuk halo admin -->
    <div class="container-fluid hello">
        <div class="container py-5">
            <div class="onscroll">
                <h1>
                    <span class="bg_text">Selamat datang</span>
                    <span class="bg_text admin">Admin</span>
                </h1>
            </div>
        </div>
    </div>

    <!-- untuk card -->
    <div class="container-fluid for-card py-5">
        <div class="container">
            <div class="row row-cols-md-4 row-cols-sm-2" >

                <!-- daftar cardnya -->
                <div class="col">
                    <div class="card card-animate" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">Jumlah paket</h5>
                            <h1><strong><%= banyakPaket %> </strong></h1>
                            <a href="#" class="btnn float-end">Card link</a>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card card-animate" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">Jumlah outlet</h5>
                            <h1><strong><%= banyakOutlet %> </strong></h1>
                            <a href="#" class="btnn float-end">Card link</a>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card card-animate" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">Jumlah admin</h5>
                            <h1><strong><%= banyakUser %> </strong></h1>
                            <a href="#" class="btnn float-end">Card link</a>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card card-animate" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">Jumlah transaksi terbaru</h5>
                            <h1><strong><%= banyakTransaksi %> </strong></h1>
                            <a href="#" class="btnn float-end">Card link</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>



    <!-- untuk tabel 10 transaksi pertama -->
    <div class="container-fluid for-table py-5">
        <div class="container">
            <h3>daftar 10 transaksi terbaru</h3>
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">kode invoive</th>
                    <th scope="col">tanggal</th>
                    <th scope="col">nama</th>
                    <th scope="col">harga</th>
                    <th scope="col">jumlah barang</th>
                  </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>ivn-20220431</td>
                        <td>13 - april 2022</td>
                        <td>budi</td>
                        <td>50.000</td>
                        <td>12 item</td>
                    </tr>
                    <% transaksi.forEach(tr => { %>
                        <% 
                        let harga = 0;
                        tr.detail_transaksi.forEach(dt=> {
                            harga += (dt.qty * dt.paket.harga)
                        })
                        %>
                    <tr>
                        <td><%- tr.kode_invoice %></td>
                        <td><%- tr.tgl%></td>
                        <td><%- tr.member.nama   %></td>
                        <td><%= harga %> </td>
                        <td><%- tr.detail_transaksi.length  %> item</td>
                    </tr>

                    <% }) %>
                </tbody>
              </table>
        </div>
    </div>
    <table>
        <tr>
            <td>nama:</td>
            <td>Zidan putra rahman</td>
        </tr>
        <tr>
            <td>role:</td>
            <td>admin</td>
        </tr>
        <tr>
            <td>outlet:</td>
            <td>outlet barokah jaya</td>
        </tr>
    </table>

    <a href="logout" class="btn btn-danger">Logout</a>


    <!-- untuk footer -->
    <footer>
        <div class="container-fuild p-3 mt-5 bg-secondary ">
            <div class="d-flex justify-content-center align-items-center"><p class="mb-0">create by me</p></div>
            
        </div>
    </footer>

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
    <script>
        $(document).ready(() => {
                $('.admin').addClass('animate');
                $('.card').removeClass('card-animate');
            }
        )
    </script>
    </body>
</html>