<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="2_user.css">
    <style>
        .title-section{
            background-color: #9e8cff;
        }
    </style>
    <title>Hello, world!</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light" >
        <div class="container">
            <a class="navbar-brand" href="#">Navbar</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                <a class="nav-link active" href="#">Home</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="#">User</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="#">Member</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="#">Paket</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="#">transaksi</a>
                </li>
            </ul>
            </div>
        </div>
    </nav>

    <!-- title section -->
    <div class="container-fluid title-section">
        <div class="container pt-5 pb-5">
            <h1>Halaman daftar user <i class="bi bi-person-bounding-box"></i></h1>
            <small >halaman yang berisi data-data terkait user, juga sebagai tempat CRUD data user</small>
        </div>
    </div>

    <!-- card section -->
    <div class="card-section container-fluid">
        <div class="container py-5">
            <div class="row row-cols-md-4 row-cols-sm-2" >

                <% 
                    let admin = user.filter(usr => usr.role == "admin").length ? user.filter(usr => usr.role == "admin").length : 0;
                    let owner = user.filter(usr => usr.role == "owner").length ? user.filter(usr => usr.role == "owner").length : 0;
                    let kasir = user.filter(usr => usr.role == "kasir").length ? user.filter(usr => usr.role == "kasir").length : 0;
                %> 
                <div class="col">
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">Jumlah user</h5>
                            <h1><strong><%= user.length %> </strong></h1>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">Jumlah admin</h5>
                            <h1><strong><%- admin %> </strong></h1>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">Jumlah owner</h5>
                            <h1><strong><%-owner %> </strong></h1>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">Jumlah kasir</h5>
                            <h1><strong><%= kasir %> </strong></h1>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>


    <!-- table section -->
    <div class="container-fluid table-section">
        <div class="container py-3">
            <div class="wrapper d-flex justify-content-between align-items-center">
                <h3>Daftar seluruh user</h3>
                <a href="app/create/user" class="btn btn-success">Tambah <i class="bi bi-person-plus-fill"></i></a>
            </div>

            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">Nama</th>
                    <th scope="col">Username</th>
                    <th scope="col">Password</th>
                    <th scope="col">Outlet</th>
                    <th scope="col">Role</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody>
                    <% user.forEach(usr => { %>
                        <tr>
                            <td><%= usr.nama %> </td>
                            <td><%= usr.username %> </td>
                            <td><%= usr.password %> </td>
                            <td><%= usr.outlet.nama %> </td>
                            <td><%= usr.role %> </td>
                            <td><a href="app/update/user/<%= usr.id %> " class="btn-primary btn-sm btn">Edit</a> | <a href="app/delete/user/<%= usr.id %> " class="btn btn-sm btn-danger">Hapus</a></td>
                        </tr>
                    <% }) %> 
                </tbody>
              </table>
        </div>
    </div>

    <!-- untuk footer -->
    <footer>
        <div class="container-fuild p-3 mt-5 bg-secondary ">
            <div class="d-flex justify-content-center align-items-center"><p class="mb-0">create by me</p></div>
            
        </div>
    </footer>

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
    </body>
</html>