  <body>
    <!-- title section -->
    <div class="container-fluid title-section">
        <div class="container pt-5 pb-5">
            <h1>Halaman edit memebr <i class="bi bi-person-plus"></i></i></h1>
            <small >halaman untuk mengedit member oleh admin</small>
        </div>
    </div>

    <div class="container-fluid">
        <div class="container py-4">
            <h2 class="ttl d-inline-block">Silahkan isi bidah dibawah ini</h2>
        </div>
    </div>

    <!--untuk form-->
    <div class="container-fluid form-init">
        <div class="container">
            <form action="" method="post">
                <div class="row mb-3">
                    <div class="col-md-2">
                        <label for="nama">Nama  :</label>
                    </div>
                    <div class="col-md-10">
                        <input type="text" class="form-control" name="nama" id="nama">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-2">
                        <label for="alamat">Alamat  :</label>
                    </div>
                    <div class="col-md-10">
                        <input type="text" class="form-control" name="alamat" id="alamat">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-2">
                        <label for="jenis_kelamin">Jenis kelamin  :</label>
                    </div>
                    <div class="col-md-10">
                        <select class="form-select" name="jenis_kelamin">
                            <option value="L"selected>Laki - laki</option>
                            <option value="P">Perempuan</option>
                        </select>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-2">
                        <label for="tlp">Telepon  :</label>
                    </div>
                    <div class="col-md-10">
                        <input type="text" class="form-control" name="tlp" id="tlp">
                    </div>
                </div>
                <div class="d-flex justify-content-end">
                    <div class="submit">
                        <button class="btn btn-success"><strong>Submit </strong><i class="bi bi-arrow-up-right"></i></button>
                    </div>
                </div>
            </form>
        </div>

    </div>
    <!-- untuk footer -->
    <footer>
        <div class="container-fuild p-3 mt-5 bg-secondary ">
            <div class="d-flex justify-content-center align-items-center"><p class="mb-0">create by me</p></div>
        </div>
    </footer>

    


